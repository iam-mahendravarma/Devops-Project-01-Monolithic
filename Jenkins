pipeline {
    agent any

    environment {
        APP_NAME = "nextjs-app"
        APP_DIR  = "/var/www/html"
        NODE_ENV = "production"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/iam-mahendravarma/Devops-Project-01-Monolithic.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Build in the root of the workspace since the project files are at the root
                sh 'npm ci --only=production'
                sh 'npm install --only=dev'
            }
        }

        stage('Build App') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Copy build output to /var/www/html (requires sudo)
                    sh "sudo rsync -a --delete ${WORKSPACE}/ ${APP_DIR}/"
                    // Restart systemd service
                    sh "sudo systemctl restart ${APP_NAME}"
                }
            }
        }
    }

    post {
        success {
            echo '✅ Deployment successful!'
        }
        failure {
            echo '❌ Deployment failed!'
        }
    }
}
